{
  "build": {
    "type": "nixpacks",
    "config": "nixpacks.toml"
  },
  "deploy": {
    "restart": "always",
    "healthcheck": {
      "path": "/up",
      "interval": 30,
      "timeout": 10,
      "retries": 3
    }
  },
  "environment": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "LOG_CHANNEL": "stack",
    "SERVER_PORT": "8000"
  },
  "volumes": [
    {
      "source": "storage",
      "target": "/app/storage"
    }
  ]
}

